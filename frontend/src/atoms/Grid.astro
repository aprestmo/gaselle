---
export interface Props {
  tag?: string;
}

const { tag = "div" } = Astro.props as Props;
const Element = tag;
---

<Element data-grid>
  <slot />
</Element>

<style>
  [data-grid] {
    --_grid-max-size: var(--grid-max-size);
    --_grid-padding-inline: var(--grid-padding-inline);

    inline-size: min(
      var(--_grid-max-size),
      100vw - var(--_grid-padding-inline)
    );
    margin-inline: auto;
  }
</style>
