---
// style imports
import '../styles/main.css';

// component imports
import Header from '../organisms/Header.astro';
import Nav from '../molecules/Navigation.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;

// const canonicalURL = Astro.url;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteDescription = 'Møt bedriftene som vokser mest i Norge og lær av deres erfaringer';
---

<!DOCTYPE html>
<html lang="nb-NO">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    {/* <meta name="color-scheme" content="light dark"> */}
    <title>{title}</title>
    <meta name="description" content={siteDescription}>
    <link rel="canonical" href={canonicalURL}>
    <link rel="stylesheet" href="https://static1.dn.no/dn/static/assets/css/nhstfonts.css">
  </head>
  <body>
    <Header>
      <Nav />
    </Header>
    <slot />
  </body>
</html>
