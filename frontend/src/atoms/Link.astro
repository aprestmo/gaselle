---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  url: string;
  content?: string;
}

const { url, content, ...rest } = Astro.props;
---

<a href={url} {...rest}>
  <slot name="before-link" />
  {content}
  <slot />
  <slot name="after-link" />
</a>

<style>
  a {
  }
</style>
