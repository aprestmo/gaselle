---
import NewsletterSignup from '../molecules/Signup.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section>
  <h1>{title}</h1>

  <NewsletterSignup />
</section>

<style>
  section {
    --_newsletter-searchfield-background: var(--transparent-black-background);
    --_newsletter-background: var(--newsletter-background);

    background-color: hsl(var(--_newsletter-background));
    border-radius: 2.5rem;
    padding-block: 3rem;
    padding-inline: 2.5rem;
  }

  h1 {
    font-size: clamp(1rem, 4vw - 1rem, 3rem);
    letter-spacing: -0.03em;
    line-height: 1.33;
  }
</style>
